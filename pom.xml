<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.vmware</groupId>
  <artifactId>vsphere-samples-nodeps</artifactId>
  <version>6.5.0</version>
  <packaging>jar</packaging>

  <name>samples</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <VAPI_VERSION>2.5.0</VAPI_VERSION>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <source>1.7</source>
          <target>1.7</target>
          <fork>true</fork>
          <meminitial>1024m</meminitial>
          <maxmem>2048m</maxmem>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.3.1</version>
        <executions>
          <execution>
            <id>install-vapi-runtime</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <packaging>jar</packaging>
              <groupId>com.vmware.vapi</groupId>
              <artifactId>vapi-runtime</artifactId>
              <version>${VAPI_VERSION}</version>
              <file>./lib/vapi-runtime-${VAPI_VERSION}.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>install-vapi-authentication</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <packaging>jar</packaging>
              <groupId>com.vmware.vapi</groupId>
              <artifactId>vapi-authentication</artifactId>
              <version>${VAPI_VERSION}</version>
              <file>./lib/vapi-authentication-${VAPI_VERSION}.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>install-vapi-samltoken</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <packaging>jar</packaging>
              <groupId>com.vmware.vapi</groupId>
              <artifactId>vapi-samltoken</artifactId>
              <version>${VAPI_VERSION}</version>
              <file>./lib/vapi-samltoken-${VAPI_VERSION}.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>install-vim25</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <packaging>jar</packaging>
              <groupId>com.vmware.vim25</groupId>
              <artifactId>vim25</artifactId>
              <version>1.0.0</version>
              <file>./lib/vim25.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>install-ssoclient</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <packaging>jar</packaging>
              <groupId>com.vmware.sso</groupId>
              <artifactId>ssoclient</artifactId>
              <version>1.0.0</version>
              <file>./lib/ssoclient.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>install-lookupservice</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <packaging>jar</packaging>
              <groupId>com.vmware.vsphereautomation.lookup</groupId>
              <artifactId>vsphereautomation-lookupservice</artifactId>
              <version>6.5.0</version>
              <file>./lib/vsphereautomation-lookupservice-6.5.0.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>install-vsphereautomation-sdk</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <packaging>jar</packaging>
              <groupId>com.vmware</groupId>
              <artifactId>vsphereautomation-client-sdk</artifactId>
              <version>6.5.0</version>
              <file>./lib/vsphereautomation-client-sdk-6.5.0.jar</file>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
		<appendAssemblyId>false</appendAssemblyId>
		<finalName>vsphere-samples-${project.version}</finalName>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
      </plugin>
   </plugins>
 </build>
